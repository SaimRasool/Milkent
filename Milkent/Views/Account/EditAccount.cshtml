@model Milkent.Models.MdlLogin

@{
    ViewBag.Title = "EditAccount";
}

<header class="page-header">
    <div class="container-fluid">
        <h2 class="no-margin-bottom">Edit User</h2>
    </div>
</header>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("EditAccount", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.ID)

            <div class="form-inline">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="col-6 pt-4">
                    <div class="form-group">
                        <label class="text-violet col-md-5"><span class="text-red">*</span> Email:</label>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-6 pt-4">
                    <div class="form-group">
                        <label class="text-violet col-md-5"><span class="text-red">*</span>Password:</label>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-6 pt-4">
                    <div class="form-group">
                        <label class="text-violet col-md-5"><span class="text-red">*</span>Name</label>
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @id = "fat", @onInput = "calculateTS()" } })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-6 pt-4">
                    <div class="form-group">
                        <label class="text-violet col-md-5"><span class="text-red">*</span>Image</label>
                        <input name="file" type="file" required class="mb-3" onchange="readURL(this);" />
                        <img id="blah" class="img-thumbnail" src='' width="150" height="150" alt="your image" />
                    </div>
                </div>

                <div class="col pt-4 pb-3">
                    <div class="offset-2">
                        <button type="submit" class="btn btn-default btnsm "><i class="bg-cover fa fa-save"></i> Save</button>
                    </div>
                </div>
            </div>


        }
    </div>

</div>

<script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#blah')
                    .attr('src', e.target.result)
                    .width(150)
                    .height(200);
            };

            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
